<?xml version="1.0" encoding="utf-8"?>

                                                   

    

                 
                       
                                                            

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.FavouritesFragment" android:tag="layout/favourites_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favourites_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:drawableBottom="@drawable/error"
            android:gravity="center"
            android:textSize="32sp"
            android:padding="8dp"
            android:textColor="@color/Text"
            android:drawableTint="@color/colorAccent"
            android:layout_height="150dp"
            android:text="@string/favourites_list_is_empty"/>

    </LinearLayout>
         