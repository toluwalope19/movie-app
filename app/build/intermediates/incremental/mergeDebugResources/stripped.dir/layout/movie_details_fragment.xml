<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                         

    
                 
                        
                                                       

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/marginTop"
        android:paddingEnd="@dimen/marginTop"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        tools:context=".ui.MovieDetailsFragment" android:tag="layout/movie_details_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:tool="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:contentDescription="@string/detailImage"
            android:tag="binding_1"         
            tools:src="@drawable/poster"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            style="@style/TextColor"
            android:tag="binding_2"      
            android:textStyle="bold"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/like"
            android:paddingTop="4dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/like"
            android:tint="@color/colorAccent"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/love" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/vote_average"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_3"                             
                style="@style/secondTextColor"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="@string/i"
                style="@style/secondTextColor"
                android:layout_weight="1" />

        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/genre"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            style="@style/secondTextColor"-->
<!--            android:paddingTop="8dp"-->
<!--            android:textSize="18sp"-->
<!--            android:textStyle="bold"-->
<!--            android:text="@{movie.genre.toString()}" />-->

        <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            style="@style/secondTextColor"
            android:paddingTop="8dp"
            android:textSize="18sp"
            android:tag="binding_4"             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextColor"
            android:id="@+id/movie_details"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:paddingEnd="8dp"
            android:lineSpacingExtra="4dp"
            tools:text="@string/lorem_ipsum_sjbcdjbfd_fdhfu_dfdu_fhudfbudsbfu_wbfuwgfuwfuwbuf_wufuw"
            android:tag="binding_5"          />
    </LinearLayout>
         