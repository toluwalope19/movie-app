<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="movie"
            type="com.example.movie_app.model.Movie" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimaryDark"
        tools:context=".ui.MovieDetailsFragment">


            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:background="@color/colorPrimaryDark">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:collapsedTitleTextAppearance="@style/AppTheme"
                    app:expandedTitleTextAppearance="@style/MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked"
                    app:collapsedTitleGravity="start"
                    app:expandedTitleGravity="center_horizontal"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="exitUntilCollapsed|scroll">

                    <ImageView
                        android:id="@+id/detail_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@{movie.thumbnail}"
                        tools:src="@drawable/poster"
                        android:scaleType="fitXY"
                        app:layout_collapseMode="parallax"/>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginTop"
            android:paddingTop="4dp"
            style="@style/TextColor"
            android:text="@{movie.title}"
            android:textStyle="bold"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/like"
            android:paddingTop="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/marginTop"
            android:contentDescription="@string/like"
            android:tint="@color/colorAccent"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/love" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/vote_average"
                android:textSize="24sp"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_star_black_24dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Double.toString(movie.voteAverage)}"
                style="@style/secondTextColor"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:textSize="24dp"
                android:layout_height="wrap_content"
                android:text="@string/i"
                style="@style/secondTextColor"
                android:layout_weight="1" />

        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/genre"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            style="@style/secondTextColor"-->
<!--            android:paddingTop="8dp"-->
<!--            android:textSize="18sp"-->
<!--            android:textStyle="bold"-->
<!--            android:text="@{movie.genre.toString()}" />-->

        <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            style="@style/secondTextColor"
            android:paddingTop="8dp"
            android:textSize="18sp"
            android:text="@{movie.releaseDate}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextColor"
            android:id="@+id/movie_details"
            android:layout_marginStart="@dimen/marginTop"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:paddingEnd="8dp"
            android:lineSpacingExtra="4dp"
            tools:text="@string/lorem_ipsum_sjbcdjbfd_fdhfu_dfdu_fhudfbudsbfu_wbfuwgfuwfuwbuf_wufuw"
            android:text="@{movie.overview}" />

        </LinearLayout>

</androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
